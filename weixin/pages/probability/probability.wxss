.button {
    background-color: #272643;
    color: white;
    font-size: small;
    border-radius: 16px;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

.p{
    font-size: 18px;
    font-weight: bold;
    color: #333;
    margin-bottom: 10px;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 20px;
}

.desc-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 0px;
}

.desc {
    font-size: 18px;
    font-weight: bold;
    color: #333;
    margin-bottom: 5px;
}

.message {
    font-size: 12px;
    font-weight: bold;
    color: #333;
    margin-bottom: 10px;
}

.input-container {
    width: 60%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
}

.input {
    font-size: small;
    border-radius: 16px;
    margin-top: 0;
    margin-bottom: 30rpx;
    width: 120%;
    height: 80rpx;
    padding: 0 20rpx;
    border: 1rpx solid #272643;
    outline: none;
}

.result {
    margin-top: 20px;
    font-size: 16px;
    color: #333;
}

.line{
    width: 100%;
    height: 1px;
    background-color: #e5e5e5;
    margin-top: 21px;
    margin-bottom: 10px;
}

.title{
    font-size: 24px;
    font-weight: bold;
    color: #333333;
    margin-bottom: 50rpx;
}

.container-detail {
    width: 86%;
    height: 100%;
    background-color: #ffffff;
    padding: 50rpx 50rpx;
    margin-top: 0;
}

.mini-title{
    font-size: 16px;
    font-weight: bold;
    color: #000000;
    margin-bottom: 10rpx;
}

.mini-text{
    font-size: 14px;
    color: #666666;
    margin-bottom: 30rpx;
}

/* 表格 */
.table {
    width: 100%;
    border-collapse: collapse;
}

.row {
    display: flex;
}

.header {
    margin-top: 5px;
    font-weight: bold;
}

.cell {
    font-size: 12px;
    flex: 1;
    padding: 5px;
    border: 0.5px solid black;
    text-align: center;
}

.page{
    margin-bottom: 30rpx;
}
