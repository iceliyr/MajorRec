.line{
    width: 100%;
    height: 1px;
    background-color: #e5e5e5;
    margin-top: 21px;
    margin-bottom: 10px;
}

.title{
    font-size: 24px;
    font-weight: bold;
    color: #333333;
    margin-bottom: 50rpx;
}

.container{
    width: 86%;
    height: 100%;
    background-color: #ffffff;
    padding: 50rpx 50rpx;
}

.content{
    margin-top: 50rpx;
    line-height: 1.5em;
    font-size: 14px;
    color: #666666;
    margin-bottom: 50rpx;
}

.button{
    margin-bottom: 50rpx;
    background-color: #272643;
    color: white;
    font-size: small;
    border-radius: 16px;
}

.question-text{
    font-size: 16px;
    color: #000000;
    margin-bottom: 50rpx;
}

.option{
    height: 100rpx;
    line-height: 70rpx;
    font-size: small;
    color: #000000;
    margin-bottom: 50rpx;
    border-radius: 0;
}

.selectedOption{
    height: 100rpx;
    line-height: 70rpx;
    color: #2c698d;
    background-color: #e3f6f5;
    margin-bottom: 50rpx;
    font-size: small;
    margin-bottom: 50rpx;
    border-radius: 0;
}

.result-text{
    font-weight: bold;
    font-size: 18px;
    color: #000000;
    margin-bottom: 10rpx;
}

.mini-title{
    font-size: 16px;
    font-weight: bold;
    color: #000000;
    margin-bottom: 10rpx;
}

.mbti-type{
    font-size: 48px;
    font-weight: bold;
    color: #000000;
    margin-bottom: 50rpx;
}

.mini-text{
    font-size: 14px;
    color: #666666;
    margin-bottom: 50rpx;
}
